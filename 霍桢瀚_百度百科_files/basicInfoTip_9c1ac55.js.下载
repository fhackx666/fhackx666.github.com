define("wiki-lemma:widget/lemma_content/mainContent/basicInfo/basicInfoTip/basicInfoTip",function(t,i,n){var e=t("wiki-common:widget/lib/jquery/jquery"),o=function(){var t=['<div class="basic-tip J-basicTip">',"<table><tr>",'<td class="content"></td>',"</tr></table>",'<em class="triangle-bg"></em>','<em class="triangle-border"></em>',"</div>"].join(""),i=e(t),n=this;this.display=function(t){var n=t.offset(),e=t[0].innerText.replace(/\s*/g,"");i.find(".content").html(e),i.css({left:n.left+10,top:n.top+31}),e.length>6&&this.show()},this.show=function(){i.show()},this.hide=function(){i.hide()};var o=function(){e(document.body).on("mouseenter","#basic-name",function(t){t.stopPropagation(),n.display(e(this))}).on("mouseout","#basic-name",function(t){t.stopPropagation(),n.hide()}),i.appendTo(e(document.body))};o()};n.exports=o});